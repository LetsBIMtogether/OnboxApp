<Window x:Class="CanvasTests.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        RenderOptions.BitmapScalingMode="Linear"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        MouseMove="Window_MouseMove"
        MouseDown="Window_MouseDown"
        MouseLeave="Window_MouseLeave"
        MouseUp="Polygon_MouseUp"
        MouseWheel="Window_MouseWheel"
        mc:Ignorable="d"
        
        Title="MainWindow" Height="500" Width="650">
    <Grid>
        <Canvas x:Name="Canvas">

            <Polygon x:Name="Terrain" StrokeThickness="4" Stroke="Transparent" MouseDown="Ellipse_MouseDown" MouseUp="Polygon_MouseUp" MouseEnter="Polygon_MouseEnter" MouseLeave="Polygon_MouseLeave">
                <Polygon.Fill>
                    <ImageBrush ImageSource="/earth3.png" TileMode="Tile" RenderOptions.EdgeMode="Aliased">
                        <ImageBrush.RelativeTransform>
                            <TransformGroup>
                                <ScaleTransform CenterY="0" CenterX="0" ScaleX="0.1" ScaleY="0.3"/>
                            </TransformGroup>
                        </ImageBrush.RelativeTransform>
                    </ImageBrush>
                </Polygon.Fill>
            </Polygon>

        </Canvas>
    </Grid>
</Window>
